<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/hospital"
            android:onClick="clickRS"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rumahsakit" />

        <ImageView
            android:id="@+id/polisi"
            android:layout_weight="1"
            android:onClick="clickPolisi"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@drawable/kantorpolisi" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/supermarket"
            android:layout_width="wrap_content"
            android:onClick="clickMarket"
            android:layout_height="115dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/supermarket" />

        <ImageView
            android:id="@+id/sekolah"
            android:layout_weight="1"
            android:onClick="clickSekolah"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@drawable/sekolah" />
    </TableRow>
</LinearLayout>